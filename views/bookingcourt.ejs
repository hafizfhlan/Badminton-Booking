            <div class="card shadow mb-4" style="width: 40%; margin:auto; display:block;">
                <div class="card-header py-3" style="text-align:center;">
                    <h3>Booking Court</h3>
                </div>
                <div class="card-body">
                    <form class="upload-form" id="form2" method="post" action="/api/customer/book">
                        <input type="hidden" name="id" value="<%= id %>">

                        <label style="margin-left:25%;" for="date">Date</label><br>
                            <input style="margin:auto; display:block; width:50%;text-align: center;" name="date" type="date"  placeholder="Select Date" value="" /><br>

                        <label style="margin-left:25%;" for="selectcourt">Time Available</label><br>
                        <select class="form-control" name="time" style="margin:auto; display:block; width:50%;text-align: center;" >
                            <option value="" selected hidden>Time Available</option>
                            <option value="12:00 - 13:00">12:00 - 13:00</option>
                            <option value="13:00 - 14:00">13:00 - 14:00</option>
                            <option value="14:00 - 15:00">14:00 - 15:00</option>
                            <option value="15:00 - 16:00">15:00 - 16:00</option>
                            <option value="16:00 - 17:00">16:00 - 17:00</option>
                            <option value="17:00 - 18:00">17:00 - 18:00</option>
                            <option value="18:00 - 19:00">18:00 - 19:00</option>
                            <option value="19:00 - 20:00">19:00 - 20:00</option>

                        </select><br>


                            
            
                            <label style="margin-left:25%;" for="selectcourt">Select Court</label><br>
                            <select class="form-control" name="court" style="margin:auto; display:block; width:50%;text-align: center;" >
                                <% for (var i = 0; i < data.length; i++){ %>
                                    <option value="<%= data[i]._id %>"><%= data[i].name %></option>
                                <% } %>
                        </select><br>
                    
                       <!-- <input class="btn btn-success btn-icon-split" href="tables.html" style=" margin:auto; display:block; margin-top:30px; width:50%;" type="submit" name="submit" value="submit" /> -->
                    <input type="submit" id="aa" class="btn btn-sm btn-warning btn-icon-split" onclick="return confirm('Confirm booking?')" style="margin:auto; display:block; margin-top:30px; width:50%;"></input>

                    </form>


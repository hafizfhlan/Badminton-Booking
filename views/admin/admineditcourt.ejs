            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Topbar Navbar -->
                    <span>Admin Dashboard</span>
                    <ul class="navbar-nav ml-auto">
                        <!-- Nav Item - User Information -->
                        <button class="w3-button w3-hover-light-grey"><a href="/logout">Log out</a></button>
                    </ul>
                </nav>
                <!-- End of Topbar -->


                <!-- Content Row -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">


                    </div>

                    <!-- Content Row -->
                    <div class="row">


                        <div class="card shadow mb-4" style="width: 40%; margin:auto; display:block;">

                            <div class="card-header py-3" style="text-align:center;">
                                <h3>Edit Court</h3>
                            </div>
                            <div class="card-body">

                                <form method="post" action="/api/admin/updcourt?_method=PUT">
                                    <!-- <label class="labelInput" style="cursor: pointer; margin:auto; display:block; text-align: center;" ><b>Court ID</b></label><br> -->
                                    <input class="inputBox" type="hidden" name="courtId" value="<%= data.id %>"
                                        style="cursor: pointer; margin:auto; display:block; text-align: center;"
                                        readonly /><br>

                                    <label class="labelInput"
                                        style="cursor: pointer; margin:auto; display:block; text-align: center;"><b>Court
                                            Name</b></label><br>
                                    <input class="inputBox" type="text" name="courtName" value="<%= data.name %>"
                                        style="cursor: pointer; margin:auto; display:block; text-align: center;"
                                        required /><br>


                                    <label
                                        style="cursor: pointer; margin:auto; display:block; text-align: center; "><b>Status</b></label><br>
                                    <select class="form-control" name="status"
                                        style="margin-left: 25%;  display:block; width:50%; text-align: center;"
                                        required>
                                        <option value="<%= data.status %>" selected readonly>
                                            <%= (data.status).toUpperCase() %></option>
                                        <option value="available">Available</option>
                                        <option value="not available">Not-Available</option>
                                    </select><br><br>
                                    <input type="hidden" name="method" value="PUT">
                                    <!-- <input type="submit" value="Register" id="aa" class="btn btn-sm btn-warning btn-user btn-block"> -->
                                    <!-- <input type="submit" class="btn  btn-success btn-icon-split" onclick="return confirm('Confirm the changes?')" style="cursor: pointer; margin:auto; display:block;"></input> -->
                                    <input type="submit" id="aa" class="btn btn-sm btn-warning btn-icon-split"
                                        onclick="return confirm('Confirm the changes?')"
                                        style="margin:auto; display:block; margin-top:auto; width:50%;"></input>

                                </form>



                            </div>
                        </div>
                    </div>
                    <!-- End of Main Content -->



                </div>

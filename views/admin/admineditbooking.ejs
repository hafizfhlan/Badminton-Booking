                        <div class="card shadow mb-4" style="width: 40%; margin:auto; display:block;">

                            <div class="card-header py-3" style="text-align:center;">
                                <h3>Modified Booking Report</h3>
                            </div>
                            <div class="card-body">

                                <form action="/api/admin/updbook/<%= id %>?_method=PUT" method="POST">


                                    <label class="labelInput" for="Date"><b>Date</b></label><br>
                                    <% var d = data.bookDate
                                    var dM = (d.getMonth()+1)
                                    d = d.getFullYear() + '-' + dM.toString().padStart(2, '0') + '-'  + d.getDate().toString();
                                    %>
                                    <input class="inputBox" type="date" name="date" value="<%= d %>"
                                        style="form-control" required>


                                    <label class="labelInput" for="selectcourt"><b>Court</b></label><br>
                                    <select class="inputBox" name="court" value="" style="form-control" required>
                                        <option value="<%= data.court['_id'] %>" selected disabled>
                                            <%= data.court['name']  %></option>
                                        <%
                                        for(var i=0;i<dataCourt.length;i++) {
                                        %>
                                        <option value="<%= dataCourt[i]._id %>"><%= dataCourt[i].name %></option>
                                        <%
                                        }
                                        %>
                                    </select><br><br>

                                    <label class="labelInput" for="Date"><b>Time</b></label><br>
                                    <select class="form-control" name="time" style="form-control" required>
                                        <option value="<%= data.bookTime %>" selected disabled><%= data.bookTime %>
                                        </option>
                                        <option value="09:01 - 10:00">09:01 - 10:00</option>
                                        <option value="10:01 - 11:00">10:01 - 11:00</option>
                                        <option value="11:01 - 12:00">11:01 - 12:00</option>
                                        <option value="12:01 - 13:00">12:01 - 13:00</option>
                                        <option value="13:01 - 14:00">13:01 - 14:00</option>
                                        <option value="14:01 - 15:00">14:01 - 15:00</option>
                                        <option value="15:01 - 16:00">15:01 - 16:00</option>
                                        <option value="16:01 - 17:00">16:01 - 17:00</option>
                                        <option value="17:01 - 18:00">17:01 - 18:00</option>
                                        <option value="18:01 - 19:00">18:01 - 19:00</option>
                                        <option value="19:01 - 20:00">19:01 - 20:00</option>
                                        <option value="20:01 - 21:00">20:01 - 21:00</option>
                                        <option value="21:01 - 22:00">21:01 - 22:00</option>
                                        <option value="22:01 - 23:00">22:01 - 23:00</option>
                                        <option value="23:01 - 00:00">23:01 - 00:00</option>

                                    </select><br>

                                    <input type="hidden" name="_method" value="PUT">
                                    <input type="submit" id="aa" class="btn btn-success btn-icon-split"
                                        onclick="return confirm('Confirm the changes?')"
                                        style="margin:auto; display:block; width:100%;"></input>

                                </form>
